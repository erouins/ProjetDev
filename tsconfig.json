{
    "include": [
      "src/**/*"
    ],
    "compileOnSave": true,
    "compilerOptions": {
      "outDir": "build",
      "lib": [
        "ES5"
      ],
      "module": "es2015",
      "moduleResolution": "node",
      "target": "es5",
      "sourceMap": true,
      "allowJs": true
    },
    "exclude": ["node_modules", "build/**/*"]
}